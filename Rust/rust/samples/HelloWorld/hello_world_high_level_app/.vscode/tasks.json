{
	"version": "2.0.0",
	"tasks": [
		{
			"command": "cargo",
			"args": ["build"],
			"problemMatcher": [
				"$rustc",
				"$rust-panic"
			],
			"group": "build",
			"label": "rust: cargo build"
		},
        {
			"command": "cargo",
            "args": ["azsphere", "package"],
			"problemMatcher": [
				"$rustc",
				"$rust-panic"
			],
			"group": "build",
			"label": "rust: cargo azsphere package"
		},
        {
            "dependsOn": ["rust: cargo build", "rust: cargo azsphere package"],
            "dependsOrder": "sequence",
            "group": "build",
            "label": "rust: compile"
        }
	]
}